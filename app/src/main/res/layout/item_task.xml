<?xml version="1.0" encoding="utf-8"?>
<course.intermediate.notes.views.TaskView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:id="@+id/titleView"
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/imageButton"
            android:layout_marginTop="16dp"
            android:layout_marginStart="@dimen/item_margin_default"
            android:layout_marginEnd="@dimen/item_margin_small"
            app:layout_constraintHorizontal_bias="0.089"/>

    <ImageButton
            android:src="@drawable/ic_close"
            android:id="@+id/imageButton"
            android:layout_width="@dimen/imageIconDefault"
            android:layout_height="@dimen/imageIconDefault"
            android:contentDescription=""
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/titleView"
            app:layout_constraintBottom_toBottomOf="@id/titleView"
            android:layout_marginEnd="@dimen/item_margin_default"
            android:background="@color/transparent"/>

    <LinearLayout
            android:id="@+id/todoContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/titleView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="vertical">
    </LinearLayout>

</course.intermediate.notes.views.TaskView>